<%= form_for([:admin, @blog_author]) do |f| %>

  <%= f.error_messages %>

  <%= field_set_tag 'Basic' do -%>

    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </div>

    <div class="field">
      <% if @blog_author.image? %>
        <%= image_tag @blog_author.image.thumb %>
        <br/>
      <% end %>
      <%= f.label :image %><br />
      <%= f.file_field :image %>
      <%= f.hidden_field :image_cache %>
      <% if @blog_author.image? %>
        <br/>
        <%= f.label :remove_image %>
        <%= f.check_box :remove_image %>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :bio %><br />
      <%= f.text_area :bio, class: 'tinymce' %>
    </div>

    <div class="field">
      <%= f.label :display %><br />
      <%= f.check_box :display %>
    </div>
    <div class="field">
      <%= f.label :chief_executive %><br />
      <%= f.check_box :chief_executive %>
    </div>

  <% end -%>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
