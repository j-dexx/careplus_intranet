$(document).on("click", ".toggle-class", function() {
  var toggleContainer = this.hash;
  var toggleClass = $(this).attr('data-class');
  var dataReturn  = $(this).attr('data-return');
  $(toggleContainer).toggleClass(toggleClass);
  
  if (dataReturn == 'false') {
    return false;
  }
  
});

