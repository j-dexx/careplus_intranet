<section class="internal-content">
  <div class="inner">
    <h1 class="star-awards-header item-header"><span class="star-awards">Star Awards</span></h1>
    
    <h2>Voting</h2>
    
    <% unless @awards_voting_mode.blank? %>
      <p>Cast your one vote on these awards.</p>
    <% else %>
      <p>There are no awards to show.</p>
    <% end %>
    
    <% @awards_voting_mode.each do |award| %>
      <div class="award float-left">
        <div class="title">
          <%= link_to award.title, award %>
        </div>
        
        <% unless award.image.blank? %>        
          <%= link_to (image_tag award.image.index, :alt => award.title), award %>
        <% else %>
          <%= link_to (image_tag "award-image-small.png", :alt => award.title), award %>
        <% end %>
      </div>
    <% end %>
  </div>
</section>