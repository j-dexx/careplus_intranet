<html>
  <head>
    <style>
      body {
        margin: 20px 0 0;
        width: 503px;
        font-family: "Helvetica Neue",Helvetica,Arial,sans-serif;
        font-size: 14px;
      }

      form {
        margin: 0;
      }

      .field {
        margin: 10px 20px;
        width: 463px;
        height: 30px;
      }

      .field_with_errors {
        display: inline;
      }

      .field label {
        display: inline-block;
        height: 30px;
        line-height: 28px;
        width: 112px;
        overflow: hidden;
        text-shadow: 0 1px 1px rgba(255, 255, 255, 0.75);
        vertical-align: top;
      }

      .field input {
        display: inline-block;
        margin: 0;
        padding: 0 4px;
        outline: 0;
        width: 331px;
        height: 28px;
        border: 1px solid #C5C5C5;
        border-radius: 3px 3px 3px 3px;
        box-shadow: 0 1px 1px rgba(0, 0, 0, 0.075) inset;
        color: #000000;
        transition: border 0.2s linear 0s, box-shadow 0.2s linear 0s;
        font-family: "Helvetica Neue",Helvetica,Arial,sans-serif;
        font-size: 14px;
        vertical-align: top;
      }

      .field .field_with_errors input {
        border-color: red;
      }

      .text-field input:focus {
        border-color: rgba(82, 168, 236, 0.8);
        box-shadow: 0 1px 1px rgba(0, 0, 0, 0.075) inset, 0 0 8px rgba(82, 168, 236, 0.6);
      }

      .actions-outer {
        border-top: 1px solid #DDDDDD;
        border-radius: 0 0 6px 6px;
        height: 50px;
        width: 503px;
        background-color: whiteSmoke;
        text-align: right;
      }

      .actions-inner {
        display: inline-block;
        margin: 10px;
        height: 30px;
      }

      .actions-inner input {
        display: inline-block;
        width: 50px;
        height: 30px;

        vertical-align: top;
        font-size: 14px;
        cursor: pointer;
        color: #FFFFFF;

        background-color: #006DCC;
        background-image: linear-gradient(to bottom, #0088CC, #0044CC);

        border-color: rgba(0, 0, 0, 0.1) rgba(0, 0, 0, 0.1) rgba(0, 0, 0, 0.25);
        border-radius: 3px 3px 3px 3px;
        border-style: solid;
        border-width: 1px;

        font-family: "Helvetica Neue",Helvetica,Arial,sans-serif;
        box-shadow: 0 1px 0 rgba(255, 255, 255, 0.2) inset, 0 1px 2px rgba(0, 0, 0, 0.05);
      }

      .actions-inner a {
        display: inline-block;

        width: 64px;
        height: 28px;

        line-height: 30px;
        text-decoration: none;
        text-align: center;
        color: #333333;

        background-color: #F0F0F0;
        background-image: linear-gradient(to bottom, #FFFFFF, #D9D9D9);
        background-repeat: repeat-x;
        border-color: rgba(0, 0, 0, 0.1) rgba(0, 0, 0, 0.1) rgba(0, 0, 0, 0.25);
        border-radius: 3px 3px 3px 3px;
        border-style: solid;
        border-width: 1px;
        box-shadow: 0 1px 0 rgba(255, 255, 255, 0.2) inset, 0 1px 2px rgba(0, 0, 0, 0.05);
      }
    </style>
  </head>

  <body>

    <%= form_for @stored_document, :html => {:multipart => true} do |f| %>
      <div class="field text-field">
        <%= f.label :name, 'Document name' %>
        <%= f.text_field :name %>
      </div>

      <div class="field">
        <%= f.label :document %>
        <%= f.file_field :document %>
        <%= f.hidden_field :document_cache %>
      </div>

      <div class="actions-outer">
        <div class="actions-inner">
          <%= f.submit 'Ok' %>
          <%= link_to_function 'Cancel', "parent.tinymce.activeEditor.windowManager.close()" %>
        </div>
      </div>
    <% end %>

  </body>
</html>
