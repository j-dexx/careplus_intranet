<section class="internal-content">
  <div class="inner">
    <div class="information">
    <h1 class="item-header">
      <span>Login</span>
    </h1>
    
    <p>Please login to continue.</p>
  
    <%= form_tag user_sessions_path do %>
      <% unless flash[:alert].blank? and flash[:notice].blank? %>
        <div class="flash-alert">
          <%= flash[:alert] %>
          <%= flash[:notice] %>
        </div>
      <% end %>
  
      <div class="field">
        <%= label_tag :username, 'Email' %>
        <%= text_field_tag :username, params[:username], :placeholder => "Email address" %>
      </div>
  
      <div class="field">
        <%= label_tag :password %>
        <%= password_field_tag :password, nil, :placeholder => "Password"  %>
      </div>
  
      <div class="field">
        <%= label_tag :remember_me, nil, :class => 'inline display-inline' %>
        <%= check_box_tag :remember_me, 1, params[:remember_me] %>
      </div>
      
      <div class="actions">
        <%= submit_tag "Log in" %>
      </div>
    <% end %>
    
    <p>
      <%= link_to "Don't have a password? Request one", new_user_password_reset_path %>
    </p>
    
    <p>
      <%= link_to 'Forgotten password?', new_user_password_reset_path %>
    </p>
    
    </div>    
  </div>
</section>