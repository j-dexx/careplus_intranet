<section class="internal-content">
  <div class="inner">
    <h1 class="item-header">
      <span>New Password</span>
    </h1>
  
    <%= form_for @user, :url => user_password_reset_path(params[:id]) do |f| %>
      <% unless flash[:alert].blank? and flash[:notice].blank? %>
        <div class="flash-alert">
          <%= flash[:alert] %>
          <%= flash[:notice] %>
        </div>
      <% end %>
  
      <div class="field">
        <%= f.label :password %><br />
        <%= f.password_field :password %>
      </div>
  
      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation %>
      </div>
  
      <div class="actions">
        <%= f.submit "Update Password" %>
      </div>
    <% end %>
</div>
</section>
